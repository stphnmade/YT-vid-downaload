{
  "name": "yt-download-app",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform YouTube downloader desktop app (MVP)",
  "main": "src/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"vite --config vite.config.js\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite --config vite.config.js build",
    "start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "lucide-react": "^0.358.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.0"
  }
}
